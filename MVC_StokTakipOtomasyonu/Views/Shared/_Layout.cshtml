
<!DOCTYPE html>
<html lang="en">
@using MVC_StokTakipOtomasyonu.ActiveFolder;
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>MVC Stok Takip Otomasyonu</title>
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" /> 
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/styledanger.css" rel="stylesheet" />
</head>
<body>
    <!-- Responsive navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Stok Takip Otomasyonu</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link @Html.ActivePage("Urunler","Index")" aria-current="page" href="#"> Ürünler</a></li>
                    <li class="nav-item"><a class="nav-link @Html.ActivePage("Kategoriler","Index")" href="/Kategoriler/Index/">Kategoriler</a></li>
                    <li class="nav-item"><a class="nav-link @Html.ActivePage("Markalar","Index")" href="/Markalar/Index/">Markalar</a></li>
                    <li class="nav-item"><a class="nav-link @Html.ActivePage("Birimler","Index")" href="/Birimler/Index/">Birimler</a></li>
                </ul>
            </div> 
        </div>
    </nav>
    <!-- Page content-->
    <div class="container" style="margin-top:20px;">
        <div class="mt-5"> 
            @RenderBody()
        </div>
    </div>

    <footer class="footer text-faded text-center py-xl-5">
        <div class="container">
            <div></div>
        <p class="m-o table-sm">
            Stok Takip Otomasyon Web Site
        </p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script> 

    @RenderSection("scriptdanger",false)
</body>
</html>
