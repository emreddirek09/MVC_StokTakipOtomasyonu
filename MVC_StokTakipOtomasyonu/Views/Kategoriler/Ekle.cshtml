@model MVC_StokTakipOtomasyonu.Models.Entity.Kategoriler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Ekle</h2>

<div class="container">
    <form action="/Kategoriler/Ekle2/">
        @Html.ValidationSummary() @*Maddeler halinde hataları gösterme*@ 
        <div class="form-group">
            <label>Kategori</label>
            <input type="text" name="Kategori" class="form-control" />
            @Html.ValidationMessageFor(x=>x.Kategori,"", new {@class = "text-danger"}) @*Hata mesajı verdirme*@
        </div>
        <div class="form-group">
            <label>Açıklama</label>
            <input type="text" name="Aciklama" class="form-control" />
            @Html.ValidationMessageFor(x => x.Aciklama ,"", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button class="btn btn-success">Kategori Ekle</button>
        </div>
    </form>
</div>

